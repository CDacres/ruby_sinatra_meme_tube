<h2>Edit a meme video</h2>

<form action="/videos/<%= @meme.id %>" method="POST">

	<label for="title">Title: </label>
	<input type="text" name="title" value="<%= @meme.title %>">

	<label for="description">Description: </label>
	<textarea name="description"><%= @meme.description %></textarea>

	<label for="url">URL: </label>
	<textarea name="url"><%= @meme.url %></textarea>

	<label for="genre">Genre: </label>
	<input type="text" name="genre" value="<%= @meme.genre %>">

	<input type="hidden" name="_method" value="PUT">

	<input type="submit" value="Update">

</form>